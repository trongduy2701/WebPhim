@model WebsitePhimHoatHinh18.Models.EF.Users

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa người dùng</h2>


